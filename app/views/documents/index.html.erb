<h1>Listing documents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Readable</th>
    <th>Writable</th>
    <th>Downloaded</th>
    <th>Category</th>
    <th>User</th>
    <th>Current revision text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.title %></td>
    <td><%= document.description %></td>
    <td><%= document.readable %></td>
    <td><%= document.writable %></td>
    <td><%= document.downloaded %></td>
    <td><%= document.category_id %></td>
    <td><%= document.user_id %></td>
    <td><%= document.current_revision_text %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

